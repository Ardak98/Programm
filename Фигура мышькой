from graphics import *
def main():
    win=GraphWin("dasd")
    win.setCoords(0.0,0.0,10.0,10.0)
    msg=Text(Point(5,0.5), "Click in the tree point")
    msg.draw(win)
    p1=win.getMouse()
    p1.draw(win)
    p2=win.getMouse()
    p2.draw(win)
    p3=win.getMouse()
    p3.draw(win)
    triangle=Polygon(p1,p2,p3)
    triangle.setFill('green')
    triangle.setOutline('red')
    triangle.draw(win)
main()    
