import random
def main():
    x=random.randint(1,100)
    while True:
        y=input("Какое число загадал Питон? ")
        if y<x:
            print "Загаданное число больше!"
        if y>x:
            print "Загаданное число меньше!"
        if y==x:
            print "Красава, угадал)"
            break
main()
